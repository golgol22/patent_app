<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/statementitem_linearlayout">
    <TextView
        android:id="@+id/statementitem_textview_time"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/darker_gray"
        android:text="저장 시간"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#e9d7d7"
        android:padding="3dp">
    <CheckBox
        android:id="@+id/statementitem_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="10"
        android:layout_gravity="center_vertical">
        <TextView
            android:id="@+id/statementitem_textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textSize="16dp"
            android:textStyle="bold"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/statementitem_textview_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="12dp"
            android:textColor="@android:color/darker_gray"
            android:singleLine="true"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/statementitem_imageview"
        android:layout_marginLeft="5dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
        android:layout_weight="1"
        tools:ignore="VectorDrawableCompat" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>
